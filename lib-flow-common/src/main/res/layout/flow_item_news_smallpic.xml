<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是新闻标题，这是新闻标题，这是新闻标题，这是新闻标题，这是新闻标题"
            android:textColor="@color/black"
            android:textSize="16sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_news_small_pic1"
                android:layout_width="0dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:src="@drawable/flow_pic_default"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/iv_news_small_pic2"
                android:layout_width="0dp"
                android:layout_height="69dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:src="@drawable/flow_pic_default"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/iv_news_small_pic3"
                android:layout_width="0dp"
                android:layout_height="69dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:src="@drawable/flow_pic_default"
                android:scaleType="fitXY"/>

        </LinearLayout>


        <com.laser.ui.widget.NewsBaseInfoView
            android:id="@+id/nv_base_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:news_lable="热"
            app:news_popularity="新闻人气"
            app:news_source="新闻类型"
            app:news_time="新闻日期"/>

    </LinearLayout>

